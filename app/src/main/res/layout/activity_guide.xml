<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/guide_login_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg2"
        tools:context=".activity.MainActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guide_cabinet_online_status_rv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_oprator_bg"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="30dp">

            <TextClock
                android:id="@+id/main_time_h_tc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format12Hour="aa hh:mm"
                android:format24Hour="HH:mm"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextClock
                android:id="@+id/main_time_d_tc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format12Hour="yyyy-MM-dd EEEE"
                android:format24Hour="yyyy-MM-dd EEEE"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_temperature" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="28°C"
                android:textColor="@color/md_cyan_A400"
                android:textSize="24sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_humidity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30%"
                android:textColor="@color/md_cyan_A400"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/guide_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:paddingTop="200dp"
            android:text="欢迎使用智能人事档案柜"
            android:textColor="@android:color/background_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guide_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_title_1"
            android:gravity="center"
            android:text="Welcome to the intelligent personnel file cabinet"
            android:textColor="@color/md_grey_300"
            android:textSize="34sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@id/guide_title_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="@dimen/super_big_big_spacing"
            android:visibility="gone"
            app:srcCompat="@drawable/fingerprint" />

        <TextView
            android:id="@+id/guide_fingerprint_entry_prompt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="170dp"
            android:gravity="center"
            android:padding="@dimen/medium_spacing"
            android:text="@string/other_login_prompt"
            android:textColor="@color/md_red_500"
            android:textSize="23sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_pwd_login"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:onClick="@{onClickListener}"
                app:lottie_autoPlay="true"
                app:lottie_fileName="lockIcon2.json"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_face_login"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:onClick="@{onClickListener}"
                app:lottie_autoPlay="true"
                app:lottie_fileName="faceIcon2.json"
                app:lottie_loop="true" />

        </LinearLayout>

    </RelativeLayout>

</layout>