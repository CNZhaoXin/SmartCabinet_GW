<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainMenuActivity">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/demo_interface_abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/demo_interface_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:id="@+id/demo_interface_countdown_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/super_big_spacing"
                    android:textColor="@color/colorFontMain"
                    android:textSize="@dimen/medium_text" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/demo_interface_cv"
            android:layout_width="wrap_content"
            android:layout_height="1020dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sub_big_spacing"
            android:background="#22ffffff"
            android:backgroundTint="#22ffffff"
            android:gravity="center"
            android:padding="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/demo_interface_rv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/sub_big_spacing"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:saveEnabled="false" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/demo_interface_inventory_start_btn"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/card_big_spacing"
                android:background="@color/md_teal_A400"
                android:letterSpacing="0.3"
                android:onClick="@{onClickListener}"
                android:text="盘库"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_big_text" />

            <Button
                android:id="@+id/demo_interface_inventory_stop_btn"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/card_big_spacing"
                android:background="@color/md_teal_A400"
                android:letterSpacing="0.3"
                android:onClick="@{onClickListener}"
                android:text="停止"
                android:textColor="@color/white"
                android:textSize="@dimen/card_big_spacing" />

        </LinearLayout>

    </LinearLayout>
</layout>